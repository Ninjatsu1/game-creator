<%- include('includes/navbar'); -%>

    <div class="container">
        
       
            
               
            
           
                
                <%project_data.forEach((project)=>{%>
                  <div class="row">
                  <a href="/create_character/<%=project.Id_project%>" class="btn btn-success mr-2 mt-3 mb-3">Add character</a>
                  <a href="/create_world/" class="btn btn-success mt-3 mb-3">Add world</a>
                  <a href="/edit_project/<%=project.Id_project%>" class="btn btn-primary ml-2 mt-3 mb-3">Edit</a>
                  </div>
                  
                  <div class="row">
                  <div class="col-10">
                  <h2><%=project.game_title%></h2>
                
                <h4>Game's description</h4>
                <p>Genre: <%=project.game_genre%></p>
                <p>Target audience: <%=project.target_audience%></p>
                <p><%=project.game_description%></p> 
               <hr>
               <h4>Recourses</h4>
               
               <p>Monetization: <%=project.monetization%></p>
               <p>Team: <%=project.team%></p>
               <hr>
               <h4>Game's story</h4>
               <p><%=project.game_story%></p>
                <%})%>
            </div>
            
        </div>
     
    </div>

</body>
