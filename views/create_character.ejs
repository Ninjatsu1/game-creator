<%- include('includes/navbar'); -%>
<div class="container">
   
<%project_data.forEach((project)=>{%>
    <h3 class="mt-3">Create character to project: <%= project.game_title %> </h3>
   
    <form action="add_character" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="project_id" value="<%=project.project_id%> ">
        <%})%>
       
        <div class="form-group">
            <label for="character_name">Name</label>
            <input type="text" id="character_name" name="character_name" class="form-control">
           </div>

       
            <label for="image">Image</label>
            <input type="file" id="image" name="image">
      

           <div class="form-group">
            <label for="character_age">Age</label>
            <input type="text" id="character_age" name="character_age" class="form-control">
           </div>

           <div class="form-group">
            <label for="character_race">Race</label>
            <p class="hint">For exaplme: elf, dwarf, human</p>
            <input type="text" id="character_race" name="race" class="form-control">
           </div>

         

           <div class="form-group">
            <label for="background">Background</label>
            <textarea type="text" id="background" name="background" class="form-control" rows="5"></textarea>
           </div>

           <div class="form-group">
            <label for="alignment">Alignment</label>
            <p class="hint">For exaplme: neutral, Good or Evil</p>
            <textarea type="text" id="alignment" name="alignment" class="form-control" rows="5"></textarea>
           </div>

           <div class="form-group">
            <label for="organization">Organization</label>
            <input type="text" id="organization" name="organization" class="form-control">
           </div>

           <div class="form-group">
            <label for="religion">Religion</label>
            <input type="text" id="religion" name="religion" class="form-control">
           </div>

           <div class="form-group">
            <label for="positive_traits">Positive traits</label>
            <textarea type="text" id="positive_traits" name="positive_traits" class="form-control" rows="3"></textarea>
           </div>

           <div class="form-group">
            <label for="negative_traits">Negative traits</label>
            <textarea type="text" id="negative_traits" name="negative_traits" class="form-control" rows="3"></textarea>
           </div>

           <div class="form-group">
            <label for="likes">Likes</label>
            <textarea type="text" id="likes" name="likes" class="form-control" rows="3"></textarea>
           </div>

           <div class="form-group">
            <label for="dislikes">Dislikes</label>
            <textarea type="text" id="dislikes" name="dislikes" class="form-control" rows="3"></textarea>
           </div>

           <div class="form-group">
            <label for="notes">Notes</label>
            <textarea type="text" id="notes" name="notes" class="form-control" rows="5"></textarea>
           </div>
    </form>
</div>

<%- include('includes/footer'); -%>